# Synology Photos configuration
SYNOLOGY_PHOTO_BASE_URL=
SYNOLOGY_USERNAME=
SYNOLOGY_PASSWORD=

# Root folder configuration (optional)
# Set this to a folder ID to restrict the gallery to only show content
# within that folder and its subfolders. Users cannot navigate outside
# this boundary. Leave empty to allow access to all folders.
SYNOLOGY_ROOT_FOLDER_ID=

# Photo visibility mode (optional)
# - "hide" (default): All photos are visible by default.
#   Tag photos with "hide" in Synology Photos to exclude them.
# - "show": No photos are visible by default.
#   Only photos tagged with "show" in Synology Photos are displayed.
# Note: Folders are always visible regardless of this setting.
PHOTO_VISIBILITY_MODE=hide

# App customization (optional)
NEXT_PUBLIC_TITLE=
NEXT_PUBLIC_SHORT_TITLE=

# MongoDB (required for reports, feedback, rate limiting, and analytics)
# Used to store analytics events (folder views, item views, downloads, visitors),
# photo reports, user feedback, and rate limiting state
MONGODB_URI=

# Admin Authentication (optional - if not set, admin dashboard is disabled)
# All three variables must be set to enable the admin dashboard
ADMIN_USERNAME=
ADMIN_PASSWORD=
ADMIN_JWT_SECRET=
